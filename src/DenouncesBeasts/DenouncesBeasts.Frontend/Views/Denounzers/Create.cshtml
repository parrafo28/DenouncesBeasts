@model  Denounzer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Denounce</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input id="name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Lastname" class="control-label"></label>
            <input id="lastname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input id="phoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <button onclick="saveDenounzer()" class="btn btn-primary">Create</button>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function saveDenounzer() {
        let denounzer = {
            name: $("#name").val(),
            lastname: $("#lastname").val(),
            phoneNumber: $("#phoneNumber").val()
        };

        $.ajax({
                url: "https://localhost:7001/Denounzers/Add",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(denounzer),
            success: function (response) {
                if (response.success) {
                    window.location.href = "/Denounzers/Index";
                } else {
                    alert("Error: " + response.message);
                }
            }
        });
    }
</script>
}