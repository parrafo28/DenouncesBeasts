@model  Denounzer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Denounce</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10" id="name"></dd>

        <dt class="col-sm-2">Lastname</dt>
        <dd class="col-sm-10" id="lastname"></dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10" id="phoneNumber"></dd>
    </dl>
</div>

<div>
    <a href="#" onclick="history.back()" class="btn btn-secondary">Back to List</a>
</div>

 @section Scripts { 
<script>
    $(document).ready(function () {
        loadDetails(@Model.Id);
    });

    function loadDetails(id) {
            $.get(`https://localhost:7001/Denounzers/Get/${id}`, function (data) {
            $("#name").text(data.name);
            $("#lastname").text(data.lastname);
            $("#phoneNumber").text(data.phoneNumber);
        });
    }
</script>
 }
