
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="/Denounzers/Create">Create New</a>
</p>

<div class="row mb-3">
    <div class="col-md-4">
        <input id="search" class="form-control" placeholder="Search..." onkeyup="loadDenounzers()" />
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th> Name </th>
            <th> LastName</th>
            <th> Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="denounzerTable">
        <!-- Aquí se cargará la información con AJAX -->
    </tbody>
</table>
 
@section Scripts {
<script>

    $(document).ready(function () {
        loadDenounzers();
    });

    function loadDenounzers() {
        let filter = $("#search").val();

            $.get("https://localhost:7001/Denounzers/GetAll", { filter: filter }, function (data) {
            let rows = "";
            console.log(data);
            data.forEach(item => {
                rows += `<tr>
                    <td>${item.name}</td>
                    <td>${item.lastname}</td>
                    <td>${item.phoneNumber}</td>
                    <td>
                        <a href="/Denounzers/Details/${item.id}" class="btn btn-info btn-sm">Details</a>
                        <a href="/Denounzers/Edit/${item.id}" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Denounzers/Delete/${item.id}" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>`;
            });
            $("#denounzerTable").html(rows);
        });
    }
</script>
}
